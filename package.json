{
  "name": "youtube_word_filter",
  "version": "0.0.1",
  "description": "YouTube に表示されるレコメンド動画に対してキーワードフィルタ出来る Chrome 拡張",
  "repository": {
    "type": "git",
    "url": "https://github.com/engclass-z/youtube_word_filter"
  },
  "author": "iroha project",
  "license": "MIT",
  "scripts": {
    "watch": "yarn clean && webpack --watch --mode=production",
    "build": "yarn clean && webpack --mode=production",
    "clean": "rimraf dist",
    "lint": "run-s lint:*",
    "lint:ts": "eslint --fix --ext ts --ext tsx src",
    "lint:scss": "stylelint --fix **/*.scss",
    "lint:prettier": "prettier --write **/*.{ts,tsx,scss,json,md}",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.scss": "stylelint --fix",
    "src/**/*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,scss,json,md}": "prettier --write"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.181",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "glob": "^8.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "stylelint": "^14.6.1",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-scss": "^4.2.0",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
